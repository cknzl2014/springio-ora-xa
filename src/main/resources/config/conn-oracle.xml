<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:orcl="http://www.springframework.org/schema/data/orcl"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
					    http://www.springframework.org/schema/data/orcl http://www.springframework.org/schema/data/orcl/spring-data-orcl-1.0.xsd">

	<!-- ========== Oracle AQ ========== -->
	<bean id="oracleDataSource" primary="true"
		class="oracle.jdbc.xa.client.OracleXADataSource" destroy-method="close">
		<property name="URL" value="${oracle.url}" />
		<property name="user" value="${oracle.username}" />
		<property name="password" value="${oracle.password}" />
	</bean>

	<bean id="xacf" class="oracle.jms.AQjmsFactory" factory-method="getXAConnectionFactory">
		<constructor-arg ref="oracleDataSource" />
	</bean>

	<!-- <orcl:aq-jms-connection-factory id="OracleAQConnectionFactory2" -->
	<!-- connection-factory-type="QUEUE_CONNECTION" -->
	<!-- data-source="oracleDataSource"/> -->

	<bean id="OracleAQConnectionFactory"
		class="org.springframework.boot.jta.atomikos.AtomikosConnectionFactoryBean">
		<property name="uniqueResourceName" value="xaOracleAQ" />
		<property name="localTransactionMode" value="false" />
		<property name="xaConnectionFactory" ref="xacf" />
		<!-- <property name="minPoolSize" value="10"/> -->
		<!-- <property name="maxPoolSize" value="100"/> -->
		<property name="poolSize" value="10" />
	</bean>
</beans>